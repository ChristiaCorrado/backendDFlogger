<% if(producto.length !== 0) { %>

<div class="height container-fluid d-flex justify-content-center align-items-center p-5">
  <% for (const article in producto ) { %>
  <div class="card p-3 container" id="<%= producto[article]._id %>">
    <div class="d-flex flex-column justify-content-between align-items-center">
      <div class="mt-2">
        <h4 class="text-uppercase"><%= producto[article].title %></h4>
        
      </div>
      <div class="image">
        <img src="<%= producto[article].thumbnail %>" width="500" />
      </div>
    </div>

    

    <p><%= producto[article].description %></p>

    <% if(user) { %>
    <form action="/api/cart/<%= producto[article]._id %>/productos" method="post" class="w-100">
      <button class="btn btn-danger w-100" value="<%= producto[article]._id %>">Add to cart</button>

    </form>
    <% } else{ %>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        ADD TO CART
      </button>
      <% };%>
  </div>
  <% } %> <% } else{ %>
  <h3 style="color: black">no existen datos</h3>
  <% };%>
  <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">ATENCION</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            DEBE SER USUARIO REGISTRADO PARA AGREGAR AL CARRITO
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

            <a href="/register"><button type="button" class="btn btn-primary">Registrarse</button></a>
              
            </form>
          </div>
        </div>
      </div>
    </div>
</div>
